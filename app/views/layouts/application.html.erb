        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Weatherbox Manager</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Weatherboxes', controller: 'welcome' %></li>
        <li><%= link_to 'Networks', controller: 'welcome' %></li>
        <li><%= link_to 'Issues', controller: 'welcome' %></li>
        <li><%= link_to 'Hardware', controller: 'welcome' %></li>
        <li><%= link_to 'Software', controller: 'welcome' %></li>

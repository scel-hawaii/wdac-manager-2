<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Issue</th>
      <th>Title</th>
      <th>Description</th>
      <th>Weatherbox</th>
      <th>Status</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.issue_id %></td>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.weatherbox["box_id"] %></td>
        <td><%= issue.status %></td>
        <td><%= issue.date %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>

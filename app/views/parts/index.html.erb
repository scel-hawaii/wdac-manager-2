<p id="notice"><%= notice %></p>

<h1>Listing Parts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Part</th>
      <th>Name</th>
      <th>Description</th>
      <th>Hardware Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part["id"] %></td>
        <td><%= part.name %></td>
        <td><%= part.description %></td>
        <td>
          <% if !part.hardware.nil? %>
            <%= part.hardware["name"] %>
          <% end %>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

